---
import One from "@/components/blocks/heros/One.astro";
import Two from "@/components/blocks/heros/Two.astro";

// Define the static paths for dynamic routing
export async function getStaticPaths() {
  return [
    { params: { component: "One" } },
    { params: { component: "Two" } },
    // Add more components as needed
  ];
}

// Map the component name to the actual component
const components = {
  One,
  Two,
  // Add more components here as needed
};

// Get the component from the route params
const { component } = Astro.params;
const Component = components[component];
---

<!-- Render the component if it exists, otherwise show an error -->{
  Component ? <Component /> : <p>Component not found</p>
}
